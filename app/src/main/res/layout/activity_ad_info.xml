<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarAD"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorOrange"
        ></android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imgad"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_launcher_background"
                />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtTitleAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tiêu đề"
                    android:textSize="13dp"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtGiaAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Giá"
                    android:inputType="numberDecimal"
                    android:textSize="13dp"
                    />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Có thể thương lượng"

                    />
                <CheckBox
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yes"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="hhahhahah"
                />
            <Spinner
                android:id="@+id/spinnerThue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlack"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtSAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Diện tích (m2)"
                    android:inputType="numberDecimal"
                    android:textSize="13dp"
                    />
            </android.support.design.widget.TextInputLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    >
    <android.support.design.widget.TextInputLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtSoTang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số tầng"
            android:inputType="number"
            android:textSize="13dp"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtSoPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số Phòng"
            android:inputType="number"
            android:textSize="13dp"
            />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtNhaTam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Số nhà tắm"
                        android:inputType="number"
                        android:textSize="13dp"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtNhaVeSinh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Số nhà vệ sinh"
                        android:inputType="number"
                        android:textSize="13dp"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtBanCong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ban công"
                        android:inputType="number"
                        android:textSize="13dp"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtMotaAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mô tả chi tiết"
                    android:inputType="textMultiLine"
                    android:textSize="13dp"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btnTTAD"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPink"
                android:text="Tiếp tục"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>


