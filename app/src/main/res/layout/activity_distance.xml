<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbarAD"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/colorOrange"
    ></android.support.v7.widget.Toolbar>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtXeBuyt"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Magni (mét)"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtBenXe"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quis (mét)"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtSanBay"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quidem (mét)"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtBien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Voluptas (mét)"
                    android:textSize="13sp"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edtNganHAng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Placeat (mét)"
                    android:textSize="13sp"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btnTTAD"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPink"
                android:text="Tiếp tục"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>



