<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/Widget.MaterialComponents.CardView"
    android:backgroundTint="#beb0b0"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView

                android:id="@+id/imgMypost"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:weightSum="6"
                >
                <TextView
                    android:id="@+id/txtTitleMypost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Ready apartment frond around"
                    android:textColor="#096e30"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/txt_price_my_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="EUR 300.000.00"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />
                    <TextView
                        android:id="@+id/txt_loaction_my_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="Dubai"
                        android:textColor="#515151"
                        android:textSize="13sp"
                        />

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_delete"
                        />
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img_edit"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.design.card.MaterialCardView>

