<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/avatar"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/name_avatar"
                android:textSize="20dp"
                android:textColor="#333333"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="John Doe"
                />
            <TextView
                android:id="@+id/addressAvatar"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_location"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="817 Reppert Coal Road, United States"
                android:textColor="#515151"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView

                    android:textColor="#585858"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Báo cáo bài viết"
                    android:drawableLeft="@drawable/ic_user"
                    />
                <TextView
                    android:textColor="#585858"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm vào yêu thích"
                    android:drawableLeft="@drawable/ic_star"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/txtClickSDT"
            android:textSize="16dp"
            android:layout_margin="20dp"
            android:textColor="@color/colorBlack"
            android:text="Click để hiển thị số điện thoại"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorXam"
            />

</LinearLayout>
